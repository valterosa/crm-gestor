REACT_APP_ENCRYPTION_KEY=your-super-secret-encryption-key-here
REACT_APP_JWT_SECRET=your-jwt-secret-key-here

# Configura√ß√µes de Rate Limiting
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_RATE_LIMIT_WINDOW=900000

# Configura√ß√µes de Token
REACT_APP_TOKEN_EXPIRY=3600
REACT_APP_REFRESH_TOKEN_EXPIRY=86400

# Configura√ß√µes de Produ√ß√£o
REACT_APP_ENABLE_SECURITY_LOGGING=false
REACT_APP_STRICT_VALIDATION=true
REACT_APP_ALLOW_DEBUG_HEADERS=false

# CSP (Content Security Policy)
REACT_APP_CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
REACT_APP_CSP_STYLE_SRC="'self' 'unsafe-inline'"
REACT_APP_CSP_IMG_SRC="'self' data: https:"
REACT_APP_CSP_CONNECT_SRC="'self'"

# Headers de Seguran√ßa
REACT_APP_X_FRAME_OPTIONS=DENY
REACT_APP_X_CONTENT_TYPE_OPTIONS=nosniff
REACT_APP_REFERRER_POLICY=strict-origin-when-cross-origin

